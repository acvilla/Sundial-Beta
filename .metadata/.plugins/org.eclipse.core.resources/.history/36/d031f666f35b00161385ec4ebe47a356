#ifndef __MICROSDCONFIG_H
#define __MICROSDCONFIG_H



#define MICROSD_HI_SPI_FREQ     8000000

#define MICROSD_LO_SPI_FREQ     100000
#define MICROSD_USART           USART2
#define MICROSD_LOC             USART_ROUTE_LOCATION_LOC1
#define MICROSD_CMUCLOCK        cmuClock_USART2
#define MICROSD_GPIOPORT        gpioPortB

#define MICROSD_MISOPIN         3  //pins should be 3, 5, 6, 4 from top to bottom
#define MICROSD_CLKPIN          5
#define MICROSD_CSPIN           6
#define MICROSD_MOSIPIN         4

/*
#define MICROSD_HI_SPI_FREQ     8000000

#define MICROSD_LO_SPI_FREQ     100000
#define MICROSD_USART           USART1
#define MICROSD_LOC             USART_ROUTE_LOCATION_DEFAULT
#define MICROSD_CMUCLOCK        cmuClock_USART1
#define MICROSD_GPIOPORT        gpioPortD

#define MICROSD_MISOPIN         1  //pins should be 1, 2, 3, 0 from top to bottom
#define MICROSD_CLKPIN          2
#define MICROSD_CSPIN           3
#define MICROSD_MOSIPIN         0
*/
#endif /* __MICROSDCONFIG_H */
